<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Local Image Browser">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" KeyDown="Grid_KeyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Image display area -->
        <Border Background="#2e2e2e" Grid.Row="0" Margin="10">
            <Grid>
                <!-- File name display -->
                <TextBlock x:Name="ImageFileName" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   Foreground="White"
                   TextAlignment="Center" />

                <!-- Image display -->
                <Image x:Name="SelectedImage" 
                       Stretch="Uniform" 
                       Margin="0,30,0,0"/>
            </Grid>
        </Border>



        <!-- Bottom section with buttons and textboxes -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left side for folder selection -->
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Browse Source" 
                            Width="200" 
                            Height="35" 
                            Click="BrowseImageFolder_Click" 
                            Background="#333333" 
                            Foreground="White" />
                    <TextBox x:Name="ImageFolderPath" 
                             Width="300" 
                             Height="35"
                             IsReadOnly="True"
                             Background="#2e2e2e" 
                             Foreground="White"
                             TextAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Browse Destination" 
                            Width="200" 
                            Height="35" 
                            Click="BrowseDestinationFolder_Click" 
                            Background="#333333" 
                            Foreground="White" />
                    <TextBox x:Name="DestinationFolderPath" 
                             Width="300" 
                             Height="35"
                             IsReadOnly="True"
                             Background="#2e2e2e" 
                             Foreground="White" 
                             TextAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Right side for navigation and move buttons -->
            <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <Button Content="Previous" 
                            Width="100" 
                            Margin="0,0,5,0" 
                            Click="PreviousImage_Click"
                            Background="#333333" 
                            Foreground="White" />

                    <Button Content="Next" 
                            Width="100" 
                            Click="NextImage_Click"
                            Background="#333333" 
                            Foreground="White" />
                </StackPanel>

                <Button Content="Move" 
                        Width="100"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,5"  
                        Click="MoveImage_Click"
                        Background="#333333" 
                        Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
