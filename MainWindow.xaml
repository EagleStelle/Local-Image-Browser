<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Local Image Browser">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Image display area -->
        <Border Background="#2e2e2e" Grid.Row="0" Grid.ColumnSpan="3" Margin="10">
            <Grid>
                <!-- Image display -->
                <Image x:Name="SelectedImage" 
                       Stretch="Uniform"/>

                <!-- Previous Button on the left side -->
                <Button x:Name="PreviousButton"
                        Content="Previous"
                        Width="100"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Left"
                        Click="PreviousImage_Click"
                        Background="#333333"
                        Foreground="White"/>

                <!-- Next Button on the right side -->
                <Button x:Name="NextButton"
                        Content="Next"
                        Width="100"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Right"
                        Click="NextImage_Click"
                        Background="#333333"
                        Foreground="White"/>
            </Grid>
        </Border>

        <!-- Controls container, placed just above the hamburger button -->
        <Border x:Name="ControlsContainer"
                Grid.Row="1"
                Visibility="Collapsed"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom">
            <!-- Make space for the hamburger button below -->
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10">

                <!-- Left side for folder selection -->
                <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Button Content="Browse Source" 
                            Width="200" 
                            Height="35" 
                            Click="BrowseImageFolder_Click" 
                            Background="#333333" 
                            Foreground="White" />
                        <TextBox x:Name="ImageFolderPath" 
                             Width="400" 
                             Height="35"
                             IsReadOnly="True"
                             Background="#2e2e2e" 
                             Foreground="White"
                             TextAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Browse Destination" 
                            Width="200" 
                            Height="35" 
                            Click="BrowseDestinationFolder_Click" 
                            Background="#333333" 
                            Foreground="White" />
                        <TextBox x:Name="DestinationFolderPath" 
                             Width="400" 
                             Height="35"
                             IsReadOnly="True"
                             Background="#2e2e2e" 
                             Foreground="White" 
                             TextAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right side for Move button -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Content="Move" 
                        Width="100"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,5"  
                        Click="MoveImage_Click"
                        Background="#333333" 
                        Foreground="White" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hamburger button stack panel at the very bottom -->
        <Border Grid.Row="2"
                Background="#333333" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom">
            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Center">
                <Button Content="â˜°"
                        Width="40" 
                        Height="30" 
                        FontSize="12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" 
                        Margin="5,0,0,0" 
                        Click="HamburgerButton_Click"/>

                <TextBlock x:Name="ImageFileName" 
                           HorizontalAlignment="Center" 
                           FontSize="18" 
                           Foreground="White"
                           TextAlignment="Center" />

                <TextBlock x:Name="ImageCount" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center" 
                           Foreground="White" 
                           Margin="0,0,5,0" 
                           Grid.Column="2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
